{
  "manifest_version": 3,
  "name": "LinkedIn Games Bot",
  "description": "Bootstrap Chrome extension scaffold for future LinkedIn automations.",
  "version": "0.1.0",
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*"]
}
